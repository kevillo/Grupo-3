<UserControl x:Class="Clinica_Medica_Polanco.consultarProveedor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Clinica_Medica_Polanco"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" StrokeDashArray="1 2" SnapsToDevicePixels="true" StrokeThickness="1" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <SolidColorBrush x:Key="Button.Static.Background" Color="#FFDDDDDD"/>
        <SolidColorBrush x:Key="Button.Static.Border" Color="#FF707070"/>
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FFBEE6FD"/>
        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FFC4E5F6"/>
        <SolidColorBrush x:Key="Button.Pressed.Border" Color="#FF2C628B"/>
        <SolidColorBrush x:Key="Button.Disabled.Background" Color="#FFF4F4F4"/>
        <SolidColorBrush x:Key="Button.Disabled.Border" Color="#FFADB2B5"/>
        <SolidColorBrush x:Key="Button.Disabled.Foreground" Color="#FF838383"/>
        <Style x:Key="Style_btn_Buscar" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Background" Value="{StaticResource Button.Static.Background}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Button.Static.Border}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#FF5454"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.MouseOver.Border}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#FF5454"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Pressed.Border}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Disabled.Background}"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.Disabled.Border}"/>
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{StaticResource Button.Disabled.Foreground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="White" Margin="6,0,-6,0">
        <Label Content="Nombre del proveedor o código:" HorizontalAlignment="Left" Margin="195,18,0,0" VerticalAlignment="Top" Width="320" FontFamily="Tahoma" FontSize="17"/>
        <TextBox TabIndex="0" x:Name="txt_Gestionar_Proveedores_Buscar" HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="33" Margin="195,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="347" FontFamily="Tahoma" FontSize="17" TextAlignment="Center" KeyUp="txt_Gestionar_Proveedores_Buscar_KeyUp"/>
        <Button TabIndex="1" Style="{DynamicResource Style_btn_Buscar}" x:Name="btn_Gestionar_Proveedores_Buscar" Content="Buscar" Cursor="Hand" HorizontalAlignment="Left" Height="33" Margin="582,51,0,0" VerticalAlignment="Top" Width="92" Background="#FF0D2D6F" Foreground="White" FontFamily="Tahoma" FontSize="17" Click="btn_Gestionar_Proveedores_Buscar_Click"/>
        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="54,84,0,0" VerticalAlignment="Top" Width="320" FontFamily="Tahoma" FontSize="17"/>
        <TextBox x:Name="txt_Gestionar_Proveedores_Nombre" HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="33" Margin="54,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="231" FontFamily="Tahoma" FontSize="15" TextAlignment="Center" IsEnabled="False"/>
        <Label Content="Apellido:" HorizontalAlignment="Left" Margin="397,84,0,0" VerticalAlignment="Top" Width="320" FontFamily="Tahoma" FontSize="17"/>
        <TextBox x:Name="txt_Gestionar_Proveedores_Apellido" HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="33" Margin="397,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="231" FontFamily="Tahoma" FontSize="15" TextAlignment="Center" IsEnabled="False"/>
        <Label Content="Teléfono:" HorizontalAlignment="Left" Margin="54,168,0,0" VerticalAlignment="Top" Width="320" FontFamily="Tahoma" FontSize="17"/>
        <TextBox x:Name="txt_Gestionar_Proveedores_Telefono" HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="32" Margin="149,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136" FontFamily="Tahoma" FontSize="15" TextAlignment="Center" IsEnabled="False"/>
        <Label Content="Dirección:" HorizontalAlignment="Left" Margin="54,207,0,0" VerticalAlignment="Top" Width="320" FontFamily="Tahoma" FontSize="17"/>
        <CheckBox x:Name="chb_Disponibilidad" Content="Disponible inmediatamente" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="397,154,0,0" VerticalAlignment="Top" Height="27" Width="246" FontFamily="Tahoma" FontSize="17" Foreground="Black" BorderBrush="Black" IsEnabled="False"/>
        <Label Content="Correo electrónico:" HorizontalAlignment="Left" Margin="397,183,0,0" VerticalAlignment="Top" Width="320" FontFamily="Tahoma" FontSize="17"/>
        <TextBox x:Name="txt_Gestionar_Proveedores_Correo" HorizontalAlignment="Left" VerticalContentAlignment="Center" Height="32" Margin="397,212,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="231" FontFamily="Tahoma" FontSize="15" TextAlignment="Center" IsEnabled="False"/>
        <Label Content="Área de trabajo:" HorizontalAlignment="Left" Margin="397,248,0,0" VerticalAlignment="Top" Width="320" FontFamily="Tahoma" FontSize="17"/>
        <DataGrid IsReadOnly="True" x:Name="dtg_Gestionar_Proveedores_Consulta" Margin="10,323,50,10" FontFamily="Tahoma"/>
        <Border x:Name="brd_BuscarPaciente" BorderBrush="Transparent" Visibility="Hidden"
            BorderThickness="1" Margin="195,80,258,332" Background="Transparent">
            <ScrollViewer x:Name="scv_BuscarPaciente" Visibility="Hidden" VerticalScrollBarVisibility="Hidden" Margin="-1,1,-27,2" Background="Transparent">
                <StackPanel x:Name="stc_InfoPaciente" Visibility="Hidden" Background="White" Height="98" Width="514"/>
            </ScrollViewer>
        </Border>
        <ComboBox x:Name="cmb_Area_Trabajo" HorizontalAlignment="Left" Margin="400,279,0,0" VerticalAlignment="Top" Width="228" Height="27" IsEnabled="False"/>
        <RichTextBox x:Name="rtb_Direccion_Proveedor" Margin="54,238,515,199" IsEnabled="False">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</UserControl>
